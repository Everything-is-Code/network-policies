---
kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  name: allow-from-ns2
  namespace: ns1-test
spec:
  podSelector: {}
  ingress:
    - ports:
        - protocol: TCP
          port: 8080
      from:
        - podSelector: {}
          namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: ns2-test
  policyTypes:
    - Ingress
